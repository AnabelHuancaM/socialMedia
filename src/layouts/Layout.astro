---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Redes sociales anabelhumor" />
		<meta name="viewport" content="width=device-width" />
		<meta name="redes sociales" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div
		class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full dark:bg-gray-900
		bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(8, 0, 255, 0.9),rgba(255,255,255,0.9))]
		dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
	  >
	<slot />
	</body>
</html>
<style is:global>

	*{
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		flex-direction: column;
		background: #202020;
		height: 100vh;
	}
</style>