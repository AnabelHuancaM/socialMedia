---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Redes sociales anabelhumor" />
		<meta name="viewport" content="width=device-width" />
		<meta name="redes sociales" content={Astro.generator} />
		<meta name="google-site-verification" content="AXSFGfS7DSwgmsRt4Yd-jrsRjRUoOBpKPTCW-5CL9SU" />
		<link rel="shortcut icon" href="perfil.jpg" type="image/x-icon">
		<title>{title}</title>
	</head>
	<body>
	<slot />
	</body>
</html>
<style is:global>
 	:root {
		color-scheme: light dark;
	}

	*{
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		flex-direction: column;
		background: #090c1a;
		background: radial-gradient(circle, rgba(27,75,135,1) 0%, rgba(9,12,26,1) 100%);
  		font-family: 'Poppins', sans-serif;
}

	@media (prefers-reduce-motion: reduce) {
		html{
			scroll-behavior: auto;
		}
	}
</style>